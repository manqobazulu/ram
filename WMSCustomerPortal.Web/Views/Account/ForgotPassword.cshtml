@model WMSCustomerPortal.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "";
}

    <!-- Bootstrap core CSS -->
@*<link href="~/bower_components/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />*@
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />

<!-- Font Awesome Icons -->
@*<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />*@
<link href="~/theme/css/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

<!-- Theme style -->
<link href="~/theme/css/AdminLTE.css" rel="stylesheet" type="text/css" />

<!-- jQuery UI -->
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />

<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
<script src="~/Scripts/ie10-viewport-bug-workaround.js"></script>

<body class="login-page">
    <div class="login-box">
        <div class="login-box-body">
                    <p class="login-box-msg">Password Reset</p>
                        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary("", new { @class = "text-danger" })
                              <div class="form-group has-feedback">

                                @Html.TextBoxFor(m => m.Email, new { id = "inputEmail", @class = "form-control", @placeholder = "EmailAddress" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                            </div>
                            @*<div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                             @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                             </div>*@


                            @*<input type="submit" class="btn btn-default" value="Email Link" />*@
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Email Reset Link</button>
                            @Html.ActionLink("Back to Home", "Dashboard", "Admin")

                        }
        </div>
    </div>

</body>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

