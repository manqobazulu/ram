@model WMSCustomerPortal.Web.Models.ApplicationGroup

@{
    ViewBag.Title = "Create Group";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 class="page-header">Create Group</h3>

@using (Html.BeginForm("CreateGroup", "GroupsAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true)


        <div class="row">
            <div class="col-lg-12">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div>
                            @Html.ActionLink("Back to List", "GroupsAdmin")
                        </div>
                    </div>
                    <div class="panel-body">

                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-12">

                                    <div class="row">
                                        <div class="col-xs-8 col-sm-6">
                                            <div class="form-group">
                                                <label>Group Name</label>
                                                @Html.TextBoxFor(model => model.Name, new { id = "inputGroupName", @class = "form-control", @placeholder = "Group Name" })
                                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <!-- /.panel -->
                                </div>
                                <!-- /.col-lg-12 -->
                            </div>

                        </div>


                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-12">

                                    <div class="row">
                                        <div class="col-xs-8 col-sm-6">
                                            <div class="form-group">
                                                <label>Group Description</label>
                                                @Html.TextBoxFor(model => model.Description, new { id = "inputGroupDescription", @class = "form-control", @placeholder = "Group Description" })
                                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <!-- /.panel -->
                                </div>
                                <!-- /.col-lg-12 -->
                            </div>

                        </div>


                        <div class="col-lg-12">

                            <div class="form-group">
                                <div class="row">

                                    <div class="col-lg-12">
                                        <div class="panel panel-default">
                                            <!-- /.panel-heading -->
                                            <div class="panel-body">
                                                <label>
                                                    Select Group Roles:
                                                </label>
                                                @foreach (var item in (SelectList)ViewBag.RolesList) {
                                            <div>
                                                <input type="checkbox" name="SelectedRoles" value="@item.Text" class="checkbox-inline" />
                                                @Html.Label(item.Text, new { @class = "control-label" })
                                            </div>
                                                        }

                                            </div>
                                            <!-- /.panel-body -->
                                        </div>
                                        <!-- /.panel -->
                                    </div>
                                    <!-- /.col-lg-12 -->
                                </div>
                            </div>

                        </div>

                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-12">

                                    <div class="row">
                                        <div class="col-xs-8 col-sm-6">
                                            <div class="form-group" style="float:left;">
                                                <button class="btn btn-primary" type="submit">Create Group</button>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- /.panel -->
                                </div>
                                <!-- /.col-lg-12 -->
                            </div>

                        </div>

                    </div>
                </div>
                <!-- /.panel -->

            </div>
            <!-- /.col-lg-12 -->
        </div>

}


<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Spinner.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.tmpl.min.js"></script>
<link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/MaskedInput/jquery.maskedinput.min.js"></script>
<script src="~/Scripts/BestUpper/jquery.bestupper.min.js"></script>



